<script>
	var animals = ['Turtle','Snake','Wolf','Cat','Dolphin','Owl','Deer','Bear','Rabbit'];
	var points = [0,0,0,0,0,0,0,0,0];
	
	function init() {
		var button = document.getElementById('quizButton');
		button.onclick = checkQuiz;
	}
	function checkQuiz() {
	//answers for question 1
		var inputs = document.getElementsByName('loudOrQuiet');
		var q1 = findValue(inputs);
		switch(q1) {
			case 'Loud': 
				points[2]+=3;
				points[4]+=5;
				points[7]+=8;
				break;
			case 'Quiet': 
				points[0]+=1;
				points[1]+=2;
				points[3]+=4;
				points[5]+=6;
				points[6]+=7;
				points[8]+=9;
				break;
		}
	//answers for question 2
		inputs = document.getElementsByName('trait');
		var q2 = findValue(inputs);
			switch(q2) {
			case 'Loyal': 
				points[2]+=3;
				break;
			case 'Smart': 
				points[3]+=4;
				points[5]+=6;
				break;
			case 'Friendly': 
				points[4]+=5;
				points[6]+=7;
				break;
			case 'Mellow': 
				points[0]+=1;
				points[8]+=9;
				break;
			case 'Strong':
				points[1]+=2;
				points[7]+=8;
				break;
		}
	//answers for question 3
		inputs = document.getElementsByName('yesOrNo');
		var q3 = findValue(inputs);
		switch(q3) {
			case 'Agree': 
				points[1]+=2;
				points[2]+=3;
				points[4]+=5;
				points[5]+=6;
				points[7]+=8;
				break;
			case 'Disagree': 
				points[0]+=1;
				points[3]+=4;
				points[6]+=7;
				points[8]+=9;
				break;
			}
	//answers for question 4
		inputs = document.getElementsByName('money');
		var q4 = findValue(inputs);
		switch(q4) {
			case 'Save': 
				points[1]+=2;
				points[3]+=4;
				points[5]+=6;
				break;
			case 'Donate': 
				points[0]+=1;
				points[8]+=9;
				points[6]+=7;
				break;
			case 'Share': 
				points[2]+=3;
				points[4]+=5;
				break;
			case 'Spend': 
				points[7]+=8;
				break;
		}
	//answers for question 5
		inputs = document.getElementsByName('stress');
		var q5 = findValue(inputs);
		switch(q5) {
			case 'Reading': 
				points[3]+=4;
				points[5]+=6;
				points[6]+=7;
				break;
			case 'Going Out': 
				points[4]+=5;
				break;
			case 'Exercising': 
				points[2]+=3;
				points[7]+=8;
				break;							
			case 'Beach': 
				points[8]+=9;
				break;
			case 'Cooking': 
				points[0]+=1;
				points[1]+=2;
				break;
		}
	//answers for question 6
		inputs = document.getElementsByName('activity');
		var q6 = findValue(inputs);
		switch(q6) {
			case 'Bungee': 
				points[4]+=5;
				points[7]+=8;
			case 'Sailing': 
				points[2]+=3;
				points[5]+=6;
			case 'Rest': 
				points[0]+=1;
				points[6]+=7;						
			case 'Restaurant': 
				points[8]+=9;
			case 'Game': 
				points[1]+=2;
				points[3]+=4;
				break;
		}
	//answers for question 7
		inputs = document.getElementsByName('place');
		var q7 = findValue(inputs);
		switch(q7) {
			case 'Tokyo': 
				points[3]+=4;
				points[5]+=6;
				points[6]+=7;
				break;
			case 'Niagara': 
				points[4]+=5;
				break;
			case 'Rome': 
				points[2]+=3;
				points[7]+=8;
				break;							
			case 'Canyon': 
				points[8]+=9;
				points[1]+=2;
				points[0]+=1;
				break;
		}
	//answers for question 8	
		inputs = document.getElementsByName('collapse');
		var q8 = findValue(inputs);
		switch(q8) {
			case 'Save Them': 
				points[2]+=3;
				points[4]+=5;
				points[7]+=8;
				break;
			case 'Call': 
				points[5]+=6;
				break;
			case 'Ignore': 
				points[0]+=1;
				points[1]+=2;
				points[3]+=4;
				break;							
			case 'Panic': 
				points[6]+=7;
				points[8]+=9;
				break;
		}	

	//answers for question 9	
		inputs = document.getElementsByName('introduced');
		var q9 = findValue(inputs);
		switch(q9) {
			case 'Get To Know': 
				points[2]+=3;
				points[4]+=5;
				points[7]+=8;
				break;
			case 'Wait': 
				points[0]+=1;
				points[1]+=2;
				points[6]+=7;
				break;
			case 'Smile': 
				points[3]+=4;
				points[5]+=6;
				points[8]+=9;
				break;						
		}	
		
		//answers for question 10
		inputs = document.getElementsByName('hard');
		var q10 = findValue(inputs);
			switch(q10) {
			case 'Listening': 
				points[4]+=5;
				points[7]+=8;
			case 'Speech': 
				points[1]+=2;
				points[6]+=7;
			case 'Focus': 
				points[5]+=6;
			case 'Emotion': 
				points[2]+=3;
				points[3]+=4;
			case 'Info':
				points[0]+=1;
				points[8]+=9;
				break;
		}
		//displays results
		displayAnimal(animals);
		


	}
	function findValue(inputs) {
		var checked;
		for (var i=0; i<inputs.length; i++) {
			if (inputs[i].checked) {
				//alert(inputs[i].value);
				checked = inputs[i].value;
				return(checked);
			}
		}
		if (!checked) {
			alert('Please choose a value.');
		}
	}

	function findAnimal(points) {
		if (points >= 1 && <=15) {
			animals = animals[0];
		}
		else if (points >=16 && <=25) {
			animals = animals[1];
		}
		else if (points >=26 && <=35) {
			animals = animals[2];
		}
		else if (points >=36 && <=45) {
			animals = animals[3];
		}
		else if (points >=46 && <=55) {
			animals = animals[4];
		}
		else if (points >=56 && <=65) {
			animals = animals[5];
		}
		else if (points >=66 && <=75) {
			animals = animals[6];
		}
		else if (points >=76 && <=85) {
			animals = animals[7];
		}
		else (points >=86) {
			animals = animals[8];
		}
	}


	function displayAnimal(animals) {
		var image = document.createElement('img');
		image.className = 'animal';
		var source = document.getElementById('resultParagraph');
		var text = 'Congratulations! Your spirit animal is a ' + animals + '!';
		
		switch(animals) {
			case 'Turtle': 
				//image.src = 'http://www.hp-lexicon.org/images/icons/shield_01-5B1-5D.jpg';
				break;
			case 'Snake': 
				//image.src = 'http://www.hp-lexicon.org/images/icons/shield_01-5B1-5D.jpg';
				break;
			case 'Wolf': 
				//image.src = 'http://www.hp-lexicon.org/images/icons/shield_huf.jpg';
				break;
			case 'Cat': 
				//image.src = 'http://www.hp-lexicon.org/images/icons/shield_rav.jpg';
				break;
			case 'Dolphin': 
				//image.src = 'http://www.hp-lexicon.org/images/icons/shield_rav.jpg';
				break;
			case 'Owl': 
				//image.src = 'http://www.hp-lexicon.org/images/icons/shield_rav.jpg';
				break;
			case 'Deer': 
				//image.src = 'http://www.hp-lexicon.org/images/icons/shield_rav.jpg';
				break;
			case 'Bear': 
				//image.src = 'http://www.hp-lexicon.org/images/icons/shield_rav.jpg';
				break;
			case 'Rabbit': 
				//image.src = 'http://www.hp-lexicon.org/images/icons/shield_rav.jpg';
				break;
			default:
				//image.src = 'broken.jpg';
		}
		
		source.appendChild(image);
		source.innerHTML += '<br>' + text;

	}
	window.onload = init;
</script>
